<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <!-- here username represents the value inside of the username key, inside of templateVars which we previously passed to this template from an app route from our server -->
      <% if (username) { %>
        <h5 style= "padding-left: 3em; padding-right: 1em"><%= username %></h5>
        <form action="/logout" method="POST">
          <button class = "btn btn-outline-dark" type="submit">Logout</button>
        </form>  
      <% } else { %>  
        <!--form with user login-->
        <form style= "padding-left: 3em; padding-right: 1em" action="/login" method="POST">
        <input type="text" name="username">
          <button class = "btn btn-outline-dark" type="submit">Login</button>
        </form>
      <% } %>
    </div>
  </nav>
</header>
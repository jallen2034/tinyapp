<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <!-- here user represents the key + value inside of the templateVars object which we previously passed to this template from an app route, from our server -->
      <% if (user) { %>
        <h5 style= "padding-left: 3em; padding-right: 1em">Logged in as <%= user.email %>!</h5>
        <form action="/logout" method="POST">
          <button class = "btn btn-outline-dark" type="submit">Logout</button>
        </form>  
      <% } else { %>  
        <form action="/register" method="GET">
          <button class = "btn btn-outline-dark" type="submit" style="margin-top: 5px;">Register</button>
        </form>
        <form action="/login" method="GET">
          <button class = "btn btn-outline-dark" type="submit" style="margin-top: 5px;">Login</button>
        </form>  
      <% } %>  
    </div>
  </nav>
</header>